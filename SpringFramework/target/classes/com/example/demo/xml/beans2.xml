<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	>

<bean id="person" class="com.example.demo.beans.Person">
	<constructor-arg index="0" type="int" value="1"></constructor-arg>
	<constructor-arg index="2" value="Perez"></constructor-arg>
	<constructor-arg index="1" value="Luis"></constructor-arg>
</bean>           

<bean id="person1" class="com.example.demo.beans.Person">
	<constructor-arg value="1"></constructor-arg>
</bean>           

	
</beans>